<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lost">

    <Button
        android:id="@+id/fouBtn"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:layout_marginBottom="285dp"
        android:background="@drawable/rb"
        android:text="Found Something?"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lostBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lostBtn"
        app:layout_constraintTop_toBottomOf="@+id/lostBtn"
        app:layout_constraintVertical_bias="0.157" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lostBtn"
        android:layout_alignStart="@+id/lostBtn"
        android:layout_alignLeft="@+id/lostBtn"
        android:layout_alignEnd="@+id/lostBtn"
        android:layout_alignRight="@+id/lostBtn"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginBottom="46dp"
        android:text="Hello User"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/lostBtn"
        app:layout_constraintEnd_toEndOf="@+id/lostBtn"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/lostBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754" />

    <Button
        android:id="@+id/lostBtn"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_above="@+id/fouBtn"
        android:layout_alignStart="@+id/fouBtn"
        android:layout_alignLeft="@+id/fouBtn"
        android:layout_alignEnd="@+id/fouBtn"
        android:layout_alignRight="@+id/fouBtn"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/rb"
        android:text="Lost Something?"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="294dp" />
</RelativeLayout>